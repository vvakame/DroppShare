<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:gravity="top|left">
	<TextView android:background="@color/disable"
		android:layout_alignParentLeft="true" android:layout_height="fill_parent"
		android:layout_width="wrap_content" android:id="@+id/side_1"
		android:maxWidth="10dip" android:minWidth="10dip"></TextView>
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/application_icon"
		android:src="@drawable/icon" android:scaleType="fitXY"
		android:adjustViewBounds="true" android:maxHeight="48px"
		android:maxWidth="48px" android:minHeight="48px" android:minWidth="48px"
		android:layout_toRightOf="@+id/side_1">
	</ImageView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="application name"
		android:id="@+id/application_name" android:layout_toRightOf="@+id/application_icon"
		android:textSize="20dip" android:layout_marginLeft="5dip"
		android:textColor="@color/weak"></TextView>
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/application_description"
		android:text="application description" android:layout_below="@+id/application_name"
		android:layout_toRightOf="@+id/application_icon" android:textSize="12dip"
		android:layout_marginLeft="10dip" android:textColor="@color/weak"></TextView>
	<TextView android:background="@color/disable"
		android:layout_alignParentRight="true" android:layout_height="fill_parent"
		android:layout_width="wrap_content" android:id="@+id/side_2"
		android:maxWidth="13dip" android:minWidth="13dip"></TextView>
</RelativeLayout>