<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/boss" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top|left">
	<LinearLayout android:id="@+id/side_1_parent"
		android:layout_alignParentLeft="true" android:maxWidth="10dip"
		android:minWidth="10dip" android:layout_height="fill_parent"
		android:layout_width="wrap_content">
		<ImageView android:id="@+id/side_1" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:minWidth="5dip"
			android:minHeight="50dip" android:background="@color/none" />
	</LinearLayout>
	<ImageView android:id="@+id/application_icon" android:src="@drawable/icon"
		android:layout_width="@android:dimen/app_icon_size"
		android:layout_height="@android:dimen/app_icon_size"
		android:scaleType="fitXY" android:layout_toRightOf="@+id/side_1_parent" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="application name"
		android:id="@+id/application_name" android:layout_toRightOf="@+id/application_icon"
		android:textSize="20dip" android:layout_marginLeft="5dip"
		android:textColor="@color/weak" android:layout_toLeftOf="@+id/side_2" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/application_description"
		android:text="application description" android:layout_below="@+id/application_name"
		android:layout_toRightOf="@+id/application_icon" android:textSize="12dip"
		android:layout_marginLeft="10dip" android:textColor="@color/weak"
		android:layout_toLeftOf="@+id/side_2" />
	<LinearLayout android:id="@+id/side_2_parent"
		android:maxWidth="10dip" android:minWidth="10dip"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_alignParentRight="true">
		<ImageView android:id="@+id/side_2" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:minWidth="5dip"
			android:minHeight="50dip" android:background="@color/none" />
	</LinearLayout>
</RelativeLayout>