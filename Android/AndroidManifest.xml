<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.vvakame.droppshare" android:versionName="0.22"
	android:versionCode="14">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application android:label="@string/app_name" android:icon="@drawable/at_yanzm_presents"
		android:description="@string/app_description" android:debuggable="true">

		<activity android:label="@string/app_name"
			android:configChanges="orientation" android:name=".activity.AppShareActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.adamrocker.android.simeji.ACTION_INTERCEPT" />
				<category android:name="com.adamrocker.android.simeji.REPLACE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:label="@string/redirect_name"
			android:theme="@android:style/Theme.Dialog" android:icon="@drawable/droid"
			android:name=".activity.MarketRedirectActivity">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.DrozipSelectorActivity"></activity>
		<activity android:name=".activity.DiffViewerActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/dropp" />
				<data android:mimeType="application/droppshare" />
			</intent-filter>
		</activity>
		<activity android:configChanges="orientation" android:label="@string/hosting_client_name"
			android:launchMode="singleInstance" android:name=".activity.HostingUploadActivity">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/dropp" />
				<data android:mimeType="application/droppshare" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="drphost" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.MenuDialogActivity"
			android:theme="@android:style/Theme.Dialog"></activity>
		<activity android:name=".activity.PreferencesActivity"></activity>

		<receiver android:name=".receiver.PackageOperationReceiver">
			<intent-filter android:priority="1">
				<data android:scheme="package" />
				<action android:name="android.intent.action.PACKAGE_ADDED" />
				<action android:name="android.intent.action.PACKAGE_REMOVED" />
				<action android:name="android.intent.action.PACKAGE_REPLACED" />
			</intent-filter>
		</receiver>

	</application>
</manifest> 
