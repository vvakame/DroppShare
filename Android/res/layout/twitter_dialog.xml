<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="top|left" android:paddingRight="4dip">
	<ImageView android:layout_width="@android:dimen/app_icon_size"
		android:layout_height="@android:dimen/app_icon_size" android:src="@drawable/twitter"
		android:id="@+id/icon" android:scaleType="fitXY"
		android:layout_marginTop="25dip" />
	<EditText android:id="@+id/name" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/icon" android:layout_width="fill_parent"
		android:hint="@string/name_hint" android:inputType="text" />
	<EditText android:id="@+id/password" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/icon" android:layout_below="@+id/name"
		android:layout_width="fill_parent" android:hint="@string/pass_hint"
		android:inputType="textPassword" />
	<Button android:layout_height="wrap_content"
		android:layout_below="@+id/password" android:layout_width="wrap_content"
		android:layout_toRightOf="@+id/icon" android:id="@+id/ok_button"
		android:text="@string/ok" android:width="80dip" />
	<Button android:layout_height="wrap_content"
		android:layout_below="@+id/password" android:layout_width="wrap_content"
		android:layout_toRightOf="@+id/ok_button" android:text="@string/cancel"
		android:id="@+id/cancel_button" android:width="80dip" />
</RelativeLayout>
