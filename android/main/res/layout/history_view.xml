<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:gravity="top|left" android:padding="8dip" android:paddingRight="12dip">
	<ImageView android:id="@+id/application_icon"
		android:scaleType="fitXY" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:src="@drawable/droid"
		android:layout_marginRight="10dip" android:layout_height="45dip"
		android:layout_width="45dip" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="application_name"
		android:id="@+id/application_name" android:layout_toRightOf="@+id/application_icon"
		android:textSize="20dip" android:textColor="@color/app_name"
		android:textStyle="bold" android:layout_marginBottom="5dip"
		android:maxLines="1" android:ellipsize="marquee" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/application_action"
		android:textSize="12dip" android:text="action" android:minWidth="100dip"
		android:layout_below="@+id/application_version_name"
		android:layout_toRightOf="@+id/application_process_date" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/application_process_date"
		android:textSize="12dip" android:text="process_date"
		android:layout_below="@+id/application_version_name"
		android:layout_toRightOf="@+id/application_icon"
		android:layout_marginRight="5dip" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Ver."
		android:layout_below="@+id/application_name" android:layout_toRightOf="@+id/application_icon"
		android:id="@+id/ver_prefix" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/application_version_name"
		android:text="version name" android:layout_below="@+id/application_name"
		android:layout_toRightOf="@+id/ver_prefix" android:maxLines="1"
		android:ellipsize="marquee" />
</RelativeLayout>
