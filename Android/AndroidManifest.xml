<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.vvakame.droppshare" android:versionName="0.22"
	android:versionCode="14">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application android:label="@string/app_name" android:icon="@drawable/at_yanzm_presents"
		android:description="@string/app_description" android:debuggable="true">

		<activity android:name=".common.MainActivity" android:label="@string/app_name"
			android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".common.PreferencesActivity" />
		<activity android:name=".common.MarketRedirectActivity"
			android:label="@string/redirect_name" android:theme="@android:style/Theme.Dialog"
			android:icon="@drawable/droid">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		<activity android:name=".appshare.AppShareActivity"
			android:label="@string/app_name" android:configChanges="orientation">
			<intent-filter>
				<action android:name="com.adamrocker.android.simeji.ACTION_INTERCEPT" />
				<category android:name="com.adamrocker.android.simeji.REPLACE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".appshare.MenuDialogActivity"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".listshare.ListShareActivity" />
		<activity android:name=".listshare.DiffViewerActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/dropp" />
				<data android:mimeType="application/droppshare" />
			</intent-filter>
		</activity>
		<activity android:name=".hosting.HostingFrontendActivity" />
		<activity android:name=".hosting.HostingUploadActivity"
			android:configChanges="orientation" android:label="@string/hosting_client_name"
			android:launchMode="singleInstance">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/dropp" />
				<data android:mimeType="application/droppshare" />
			</intent-filter>
		</activity>
		<activity android:name=".hosting.TwitterOAuthActivity"
			android:configChanges="orientation" />

		<receiver android:name=".background.PackageOperationReceiver">
			<intent-filter android:priority="1">
				<data android:scheme="package" />
				<action android:name="android.intent.action.PACKAGE_ADDED" />
				<action android:name="android.intent.action.PACKAGE_REMOVED" />
				<action android:name="android.intent.action.PACKAGE_REPLACED" />
			</intent-filter>
		</receiver>

	</application>
</manifest> 
